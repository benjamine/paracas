
# prepend /usr/local/bin (puts brew over system builtin)
export PATH=/usr/local/bin:$PATH
# set homebrew cask options
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# common aliases


# aliases for git/hub
alias clone='hub clone'
alias commit='git c'
alias amend='git amend'
alias s='git s'
alias up='git up'
alias pr='git pr'
alias fork='git fork'
alias feature='git feature'
alias hotfix='git hotfix'
alias push='git push origin'
alias pushf='git push -f origin'

# docker (using boot2docker)
export DOCKER_HOST=tcp://localhost:2375
alias docker-vm='boot2docker'
alias docker-up='boot2docker init; boot2docker up'
alias docker-down='boot2docker down'
alias docker-update='boot2docker down; boot2docker download; boot2docker up'
